{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "TG Node Language",
	"patterns": [
		{
			"include": "#strings"
		},
		{
			"include": "#constants"
		},
		{
			"include": "#comments"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#types"
		},
		{
			"include": "#sections"
		},
		{
			"include": "#lua"
		},
		{
			"include": "#variables"
		},
		{
			"include": "#operators"
		}
	],
	"repository": {
		"lua": {
			"begin": "{",
			"patterns": [{
				"include": "source.lua"
			}],
			"end": "}"
		},
		"constants": {
			"patterns": [
				{
					"name": "constant.language.tgnode",
					"match": "\\b[0-9]+\\b"
				},
				{
					"name": "constant.language.tgnode",
					"match": "\\b0x([0-9]*[a-z]*[A-Z]*)*\\b"
				},
				{
					"name": "constant.language.tgnode",
					"match": "\\b[0-9]+\\.[0-9]+\\b"
				},
				{
					"name": "constant.language.tgnode",
					"match": "\\b(true|false)"
				}
			]
		},
		"types": {
			"name": "storage.type.tgnode",
			"match": "\\b(color|tex|int|bool|float)\\b"
		},
		"keywords": {
			"name": "keyword.control.tgnode",
			"match": "^(?:\\s)*(varname|name|color|default|display|show|param|output|input)"
		},
		"sections": {
			"name": "entity.other.attribute.tgnode",
			"match": "^(metadata|exec)(?:\\s)*\n?"
		},
		"comments": {
			"patterns": [{
				"name": "comment.line.tgnode",
				"match": "(?:^[ \t]+)?(#).*$\n?"
			}]
		},
		"strings": {
			"name": "string.quoted.double.tgnode",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.tgnode",
					"match": "\\\\."
				}
			]
		},
		"variables": {
			"name": "variable.name.tgnode",
			"match": "(?<=\\s|^)(?:(?!color|int|float|bool|tex|==|!=|>=|<=|<|>)\\S)*(?=\\s|$)"
		},
		"operators": {
			"name": "keyword.operator.tgnode",
			"match": "(?:\\s)*(==|!=|>=|<=|>|<)(?:\\s)*"
		}
	},
	"scopeName": "source.tgnode"
}